        </div>
      </div>
      
      <hr class="colorgraph">
      <div class="row">
        <div class="col-xs-6 col-md-6"><input type="submit" value="Register" class="btn btn-primary btn-block btn-lg" tabindex="7"></div>
        <div class="col-xs-6 col-md-6"><%=link_to 'Sign In',:login,class:"btn btn-success btn-block btn-lg"%></div>
      </div>
    <%end%>
  </div>
</div>
